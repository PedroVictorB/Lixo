<?xml version="1.0" encoding="UTF-8"?>
    <!--status do oleo -->
<Enactor name="RoomEnactor" xmlns="http://www.contexttoolkit.org/ctk">
    <InWidget href="Widget-Lixeira.xml"/>
    <OutWidget href="Widget-Status-Lixeira.xml"/>
    
    <OutcomeName>statusPlastico</OutcomeName>
    <Reference name="Vazia">
        <Query name="lixeiraVazia"> 
            (
              (EQUAL quantPlastico 0) 
            ) 
        </Query>
        <Outcome outAttribute="statusPlastico">"Vazio"</Outcome>
        <ServiceInput function="statusControle" service="statusService">
            <Attribute name="statusPlastico"/>
        </ServiceInput>
        
    </Reference>
    <Reference name="Enchendo">
        <Query name="lixeiraEnchendo"> 
            (OR
            (GREATER quantPlastico 0)
            (LESS quantPlastico 250)
            ) 
        </Query>
        <Outcome outAttribute="statusPlastico"> "Enchendo" </Outcome>
        <ServiceInput function="statusControle" service="StatusService">
            <Attribute name="statusPlastico"/>
        </ServiceInput>
        
    </Reference>
        <Reference name="Cheia">
        <Query name="lixeiraCheia"> 
            (
            (EQUAL quantPlastico 250)
            ) 
        </Query>
        <Outcome outAttribute="statusPlastico"> "Cheia" </Outcome>
        <ServiceInput function="statusControle" service="StatusService">
            <Attribute name="statusPlastico"/>
        </ServiceInput>
    </Reference>
